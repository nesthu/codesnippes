select 
to_char(ra.nummer) as REPNUMMER,
ra.status,
ra.lagerplatz,
sap.chargennummer
from MM_TOOLS_REP_ALLG ra
left outer join (
    select materialnummer,chargennummer
        from mm_mseg_matbeleg_12m_drs
        where materialnummer = 'REPARATURTEIL' 
        group by materialnummer, chargennummer
        )sap on sap.chargennummer = to_char(ra.nummer)
where ra.lagerplatz is null and ra.status = 8 and sap.chargennummer is not null
